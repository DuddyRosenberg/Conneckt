<div style="margin:10px">
    <form>
        <input id="sim" placeholder="SIM" />
        <input id="serial" placeholder="Serial" />
        <input id="zip" placeholder="Zip" />

        <button id="add-device" type="button" class="btn btn-primary">Add Device</button>
        <button id="activate" type="button" class="btn btn-primary">Activate</button>

        <div>
            <input id="current-min" placeholder="current MIN" />
            <input id="current-account-number" placeholder="current account number" />
            <input id="current-service-provider" placeholder="current service provider"
            <input id="password" placeholder="password" />

            <button id="add-device" type="button" class="btn btn-primary">Add Device</button>
            <button id="activate" type="button" class="btn btn-primary">Activate</button>
            <button id="internal-port" type="button" class="btn btn-primary">Internal Port</button>
            <button id="external-port" type="button" class="btn btn-primary">External Port</button>
